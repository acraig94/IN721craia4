<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bit.alan.requestingdata.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings Screen"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textViewSettings" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pointless text. Pointless Text. Pointless text. Pointless Text. Pointless text. Pointless Text. Pointless text. Pointless Text. Pointless text. Pointless Text."
        android:textSize="20sp"
        android:id="@+id/tv_SettingsText"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/textViewSettings"
        android:layout_centerHorizontal="true"
        android:textColor="#F00" />

</RelativeLayout>
